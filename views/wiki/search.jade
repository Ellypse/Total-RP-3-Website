extends layout

block content
    .row
        #sidebar.col-sm-3
            include sidebar
        .col-sm-9
            section.content.search
                h3.title= "Search results for " + search
                if searchResults.length > 0
                    each result in searchResults
                        .page
                            h2.page-title
                                a(href="#{config.base_url}/#{result.slug}")= result.title
                            .page-excerpt!= result.excerpt
                else
                    p.nothing-found= "Nothing found for " + search